@using ThanalSoft.SmartComplex.Web.Helpers.Html
@model ThanalSoft.SmartComplex.Web.Areas.Apartment.Models.FlatViewModel
@{
    Layout = "~/Views/Shared/_TitleView.cshtml";
}
@section title {
    <i class="fa fa-home"></i> Add Flat <small>to Apartment</small>
}
@using (Ajax.BeginForm("CreateFlat", "Home",
                                            new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "container", OnBegin = "loadAnimator", OnComplete = "hideAnimator" },
                                            new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(pX => pX.Flat.ApartmentId)
    <div class="form-group">
        @Html.LabelFor(m => m.Flat.Name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Flat.Name, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(m => m.Flat.Name, "", new { @class = "text-errormessage" })
        </div><span class="required">*</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Flat.Floor, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Flat.Floor, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(m => m.Flat.Floor, "", new { @class = "text-errormessage" })
        </div><span class="required">*</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Flat.Block, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Flat.Block, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Flat.Phase, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Flat.Phase, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Flat.SquareFeet, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Flat.SquareFeet, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Flat.FlatTypeId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(m => m.Flat.FlatTypeId, Model.FlatTypes, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Flat.ExtensionNumber, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Flat.ExtensionNumber, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            @Html.RoleButtonDarkFor("Cancel", "cancelFlat")
            @Html.RoleSubmitButtonNormalFor("Submit")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $(
        $("#cancelFlat").click(function () {
            invokeAjaxAndFillContainer('@Url.Action("GetAllApartmentFlats", "Manage", new { area = "Apartment" })', { pApartmentId : @Model.Flat.ApartmentId});
        })
    );
</script>