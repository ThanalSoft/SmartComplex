@using ThanalSoft.SmartComplex.Web.HTMLHelpers
@model ThanalSoft.SmartComplex.Web.Areas.Apartment.Models.ApartmentViewModel
@{
    Layout = "~/Views/Shared/_TitleView.cshtml";
}
@section title {
    <i class="fa fa-building"></i> Edit Apartment <small>'@Model.Apartment.Name'</small>
}

@using (Ajax.BeginForm("Update", "Home",
                    new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "container", OnBegin = "loadAnimator", OnComplete = "hideAnimator" },
                    new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Apartment.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Apartment.Name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Apartment.Name, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(m => m.Apartment.Name, "", new { @class = "text-errormessage" })
        </div><span class="required">*</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Apartment.Address, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextAreaFor(m => m.Apartment.Address, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(m => m.Apartment.Address, "", new { @class = "text-errormessage" })
        </div><span class="required">*</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Apartment.City, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Apartment.City, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(m => m.Apartment.City, "", new { @class = "text-errormessage" })
        </div><span class="required">*</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Apartment.StateId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(m => m.Apartment.StateId, Model.States, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(m => m.Apartment.StateId, "", new { @class = "text-errormessage" })
        </div><span class="required">*</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Apartment.PinCode, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Apartment.PinCode, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(m => m.Apartment.PinCode, "", new { @class = "text-errormessage" })
        </div><span class="required">*</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Apartment.Phone, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Apartment.Phone, new { @class = "form-control col-md-7 col-xs-12" })
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            @Html.RoleButtonDarkFor("Cancel", "cancelCreate")
            @Html.RoleSubmitButtonNormalFor("Update")
        </div>
    </div>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $(
        $("#cancelCreate").click(function() {
            invokeAjaxAndFillContainer('@Url.Action("Get", "Home", new { area = "Apartment" })', { pApartmentId : @Model.Apartment.Id});
        })
    );
</script>