@using ThanalSoft.SmartComplex.Web.HTMLHelpers
@model ThanalSoft.SmartComplex.Web.Areas.Apartment.Models.ApartmentListViewModel
@{
    Layout = "~/Views/Shared/_TitleView.cshtml";
}

@section topbuttons {
    @Html.RoleButtonNormalFor("Add New", "addNewApartment", "fa-plus", null, "Administrator")
}
@section title {
    <i class="fa fa-building"></i> Apartments <small>in the system!</small>
}
@Html.DisplayTableFor(Model.Apartments)

<script>
    $(
        $("#addNewApartment").click(function () {
            invokeAjaxAndFillContainer('@Url.Action("Create", "Manage", new { area = "Apartment" })');
        }),
        $("[data-rowid]").click(function () {
            var id = $(this).data("rowid");
            invokeAjaxAndFillContainer('@Url.Action("Get", "Manage", new { area = "Apartment" })', { pApartmentId: id });
        })
    );
</script>