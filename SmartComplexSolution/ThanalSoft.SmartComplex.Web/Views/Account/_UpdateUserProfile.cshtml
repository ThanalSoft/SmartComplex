@model ThanalSoft.SmartComplex.Web.Models.Account.ProfileViewModel
<p class="lead">Update your profile</p>
<div class="x_content">
    @using (Ajax.BeginForm("UpdateProfile", "Account", FormMethod.Post,
                        new AjaxOptions { UpdateTargetId = "home", OnBegin = "loadAnimator",  OnComplete = "onSuccess" },
                        new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control col-md-7 col-xs-12" })
            </div><span class="required">*</span>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control col-md-7 col-xs-12" })
            </div><span class="required">*</span>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Mobile, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-10">
                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control col-md-7 col-xs-12" })
            </div><span class="required">*</span>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </div>
    }
</div>

<script>
    function onSuccess() {
        hideAnimator();
        new PNotify({
            title: 'Profile Updated',
            text: 'Your profile is updated successfully.',
            type: 'success',
            opacity: .8,
            nonblock: {
                nonblock: true
            },
            delay: 2000
        });

    }
</script>