@model ThanalSoft.SmartComplex.Web.Models.Account.ProfileViewModel
@if (Model?.ActionResultStatus != null)
{
    Html.RenderPartial("Partials/_ActionResultNotifyPartial", Model.ActionResultStatus);
}
<p class="lead">Update your profile</p>
<div class="x_content">
    @using (Ajax.BeginForm("UpdateProfile", "Account", FormMethod.Post,
                                new AjaxOptions { UpdateTargetId = "home", OnBegin = "loadAnimator", OnComplete = "hideAnimator" },
                                new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control col-md-7 col-xs-12" })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-errormessage" })
            </div><span class="required">*</span>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control col-md-7 col-xs-12" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-errormessage" })
            </div><span class="required">*</span>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Mobile, new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})
            <div class="col-md-6 col-sm-6 col-xs-10">
                @Html.TextBoxFor(m => m.Mobile, new {@class = "form-control col-md-7 col-xs-12"})
                @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-errormessage" })
            </div><span class="required">*</span>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BloodGroupId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-10">
                @Html.DropDownListFor(m => m.BloodGroupId, Model.BloodGroups,  new { @class = "form-control col-md-7 col-xs-12" })
            </div>
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </div>
    }
</div>