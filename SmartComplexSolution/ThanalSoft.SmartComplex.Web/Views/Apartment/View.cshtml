@using Microsoft.Ajax.Utilities
@model ThanalSoft.SmartComplex.Web.Models.ApartmentViewModel
@{
    Layout = "";
}
<div class="x_panel">
    <div class="x_title">
        <h2>
            <i class="fa fa-building"></i> Apartment Details
        </h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <br>
        <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
            <div class="form-group">
                @Html.LabelFor(m => m.ApartmentInfo.Name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12 display-label">
                    @Html.Label(Model.ApartmentInfo.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ApartmentInfo.Address, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12 display-label">
                    @Html.Label(Model.ApartmentInfo.Address)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ApartmentInfo.City, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12 display-label">
                    @Html.Label(Model.ApartmentInfo.City)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ApartmentInfo.StateId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12 display-label">
                    @Html.Label(Model.ApartmentInfo.State)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ApartmentInfo.PinCode, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12 display-label">
                    @Html.Label(Model.ApartmentInfo.PinCode.ToString())
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ApartmentInfo.Phone, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12 display-label">
                    @Html.Label(Model.ApartmentInfo.Phone.IsNullOrWhiteSpace() ? "" : Model.ApartmentInfo.Phone)
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <a class="btn btn-app" onclick="closeApartment()">
                        <i class="fa fa-close"></i> Cancel
                    </a>
                    <a class="btn btn-app">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-app">
                        <i class="fa fa-remove"></i> Delete
                    </a>
                    <a class="btn btn-app">
                        <i class="fa fa-lock"></i> Lock
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
