@model ThanalSoft.SmartComplex.Web.Models.ApartmentViewModel
@{
    Layout = "";
}
@using (Html.BeginForm("Create", "Apartment", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="x_panel">
        <div class="x_title">
            <h2>
                <i class="fa fa-building"></i> Apartment Details<small>to the system!</small>
            </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br>
            <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                <div class="form-group">
                    @Html.LabelFor(m => m.ApartmentInfo.Name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.LabelFor(m => m.ApartmentInfo.Name, new { @class = "form-control col-md-7 col-xs-12" })
                    </div><span class="required">*</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ApartmentInfo.Address, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.LabelFor(m => m.ApartmentInfo.Address, new { @class = "form-control col-md-7 col-xs-12" })
                    </div><span class="required">*</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ApartmentInfo.City, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.LabelFor(m => m.ApartmentInfo.City, new { @class = "form-control col-md-7 col-xs-12" })
                    </div><span class="required">*</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ApartmentInfo.StateId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.LabelFor(m => m.ApartmentInfo.State, new { @class = "form-control col-md-7 col-xs-12" })
                    </div><span class="required">*</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ApartmentInfo.PinCode, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.LabelFor(m => m.ApartmentInfo.PinCode, new { @class = "form-control col-md-7 col-xs-12" })
                    </div><span class="required">*</span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ApartmentInfo.Phone, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.LabelFor(m => m.ApartmentInfo.Phone, new { @class = "form-control col-md-7 col-xs-12" })
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <a class="btn btn-app">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
}