@model ThanalSoft.SmartComplex.Web.Models.Apartment.FlatManagementViewModel
@{
    Layout = null;
}
<div class="x_panel">
    <div class="x_title">
        <h2>
            <i class="fa fa-home"></i> Upload Apartment Flats
        </h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content form-horizontal form-label-left">
        @using (Html.BeginForm("UploadFlats", "Apartment", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ApartmentId)
            <div class="form-group">
                <label class="col-sm-3 control-label">Select Excel File</label>
                <div class="col-sm-4">
                    <div class="input-group">
                        <input type="file" id="fileUpload" name="fileUpload" style="margin-top: 5px;">
                    </div>
                </div>
            </div>
            <div class="divider-dashed"></div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button type="button" class="btn btn-dark cancel" onclick="viewApartment(@Model.ApartmentId)">Cancel</button>
                    <input type="submit" id="Submit" name="Submit" value="Upload" class="btn btn-success"/>
                </div>
            </div>
        }
        <div class="form-group">
        </div>
    </div>
</div>